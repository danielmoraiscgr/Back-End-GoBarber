{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "class-methods-use-this": "off",
        "@typescript-eslint/camelcase": "off",
        "import/extensios": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    },
    "settings":{
        "import/resolver": {
            "typescript":{}
        }
    }
}
